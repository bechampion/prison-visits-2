<h2><%= t('.title') %></h2>

<%= error_container(f, :selection) do %>
  <label class="block-label">
    <%=
      f.radio_button(
        :selection, :prisoner_details_incorrect,
        class: 'js-Conditional',
        data: { 'conditional-el': 'prisoner_details_incorrect_details' }
      )
    %>
    <%= t('.prisoner_details_incorrect') %>
  </label>
<% end %>

<div id="prisoner_details_incorrect_details" class="panel panel-border-narrow">
  <h3><%= t('prison.visits.shared.what_we_will_tell') %></h3>

